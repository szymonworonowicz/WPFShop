<Page x:Class="WpfProject.Pages.SalesProducts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfProject.Pages"
      xmlns:controls="clr-namespace:WpfProject.UserControls"
      xmlns:models ="clr-namespace:WpfProject.Models"
      xmlns:converters ="clr-namespace:WpfProject.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SalesProducts"
      Loaded="LoadSaleProducts">
    <Page.Resources>
        <converters:ImageConverter x:Key="ImageConverter"/>
        <converters:PriceConverter x:Key="PriceConverter"/>
        <DataTemplate x:Key="SaleTemplate">
            <Border x:Name="Border" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Transparent" >
                <Grid Margin="3" x:Name="Grid" Grid.IsSharedSizeScope="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition  Height="*"></RowDefinition>
                        <RowDefinition  Height="*"></RowDefinition>
                        <RowDefinition  Height="*"></RowDefinition>
                        <RowDefinition  Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Image  Height="100" Width="100"  Source="{Binding Path=Photo, Converter={StaticResource ImageConverter}}"></Image>
                    <Label Grid.Row="2" HorizontalContentAlignment ="Left" Content="{Binding Price , Converter={StaticResource PriceConverter}}" Margin="5"></Label>
                    <Label  Grid.Row="1" HorizontalContentAlignment ="Left" Content="{Binding SalePrice, Converter={StaticResource PriceConverter}}"  Foreground="Red"   ></Label>
                    <Label Grid.Row="3" HorizontalContentAlignment ="Left" Content="{Binding Name}" FontWeight="Bold" ></Label>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>
    <ListBox Name="SalesProduct" Grid.Row="3" Grid.ColumnSpan="4" Margin="5" Padding="5" BorderThickness="0" ItemTemplate="{StaticResource SaleTemplate}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel></WrapPanel>
                <!--<UniformGrid x:Name="Uniform" Columns="3" Rows="2" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" Margin="5"></UniformGrid>-->
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>
    </ListBox>
</Page>
