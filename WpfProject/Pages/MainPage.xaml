<Page x:Class="WpfProject.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfProject.Pages"
      xmlns:styles="clr-namespace:WpfProject.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage"
      Background="WhiteSmoke"
      Loaded="OnLoaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition  ></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Column="4" Margin="5" HorizontalAlignment="Right">
            <WrapPanel Margin="5,0,5,0">
                <Image Width="20" Height="20">
                    <Image.Source>
                        <BitmapImage UriSource="..\Image_Icons\user.png" />
                    </Image.Source>
                </Image>
                <Button  Background="Transparent" BorderThickness="0" FontSize="10">Zaloguj się</Button>
            </WrapPanel>
            <WrapPanel Margin="5,0,5,0">
                <Image Width="20" Height="20" Name="register">
                    <Image.Source>
                        <BitmapImage UriSource="..\Image_Icons\user_add.png"/>
                    </Image.Source>
                </Image>
                <Button  Background="Transparent" BorderThickness="0" FontSize="10">Zarejestruj się</Button>
            </WrapPanel>
        </WrapPanel>
        <Grid Grid.Row="1" Grid.ColumnSpan="4" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image>
                <Image.Source>
                    <BitmapImage UriSource="../Image_Icons/logo.png"/>
                </Image.Source>
            </Image>
            <WrapPanel Grid.Column="1" VerticalAlignment="Center" Orientation="Horizontal">
                <TextBox Text="Wyszukaj przedmiot" FontSize="18"></TextBox>
                <ComboBox Name="Category" Text="Wyszukaj przedmiot"></ComboBox>
                <Button Padding="15,5,15,5" Margin="5">Szukaj</Button>
            </WrapPanel>
        </Grid>


    </Grid>
</Page>
